<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fish.core.sys.mapper.SysLogMapper">
    <resultMap type="com.fish.core.sys.entity.SysLog" id="sysLogResultMap">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="operateName" column="operate_name" jdbcType="VARCHAR"/> 
        <result property="operation" column="operation" jdbcType="VARCHAR"/>
        <result property="method" column="method" jdbcType="VARCHAR"/>
        <result property="params" column="params" jdbcType="VARCHAR"/>
        <result property="ip" column="ip" jdbcType="VARCHAR"/>
        <result property="remark" column="REMARK" jdbcType="VARCHAR"/>
        <result property="createUserAcct" column="create_user_acct" jdbcType="VARCHAR"/>
        <result property="createUserName" column="create_user_name" jdbcType="VARCHAR"/>
        <result property="createUserId" column="create_user_id" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
    </resultMap>
    <sql id="selectCols">
        SELECT T.ID,
               T.OPERATE_NAME,
               T.operation,
               T.METHOD,
               T.PARAMS,
               T.IP,
               T.REMARK,
               T.CREATE_USER_ID,
               U.LOGIN_ACCT AS CREATE_USER_ACCT,
               U.USER_NAME  AS CREATE_USER_NAME,
               T.CREATE_TIME
          FROM SYS_LOG T
          LEFT JOIN SYS_USER U ON U.RWID = T.CREATE_USER_ID
    </sql>
    <sql id="queryWhere">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(createUserId)">
                AND T.CREATE_USER_ID=#{createUserId,jdbcType=VARCHAR}
            </if>
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(operateName)">
                AND T.operate_name like concat('%',#{operateName,jdbcType=VARCHAR},'%')
            </if>
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(method)">
                AND T.METHOD Like concat('%',#{method,jdbcType=VARCHAR},'%')
            </if>
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(operation)">
                AND T.OPERATION Like concat('%',#{operation,jdbcType=VARCHAR},'%')
            </if>
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(createUserAcct)">
                AND U.LOGIN_ACCT LIKE concat('%',#{createUserAcct,jdbcType=VARCHAR},'%')
            </if>
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(startDate)">
                <![CDATA[
                    AND T.CREATE_TIME>=#{startDate}
                ]]>
            </if>
            <if test="@com.fish.core.utils.OgnlUtils@isNotEmpty(endDate)">
                <![CDATA[
                    AND T.CREATE_TIME<=#{endDate}
                ]]>
            </if>
        </trim>
    </sql>
    <select id="selectList" parameterType="com.fish.core.common.QueryParam" resultMap="sysLogResultMap">
        <include refid="selectCols" />
        <include refid="queryWhere" />
        ORDER BY T.CREATE_TIME DESC
    </select>

    <select id="selectListCount" parameterType="com.fish.core.common.QueryParam" resultType="int">
        SELECT COUNT(*)
          FROM SYS_LOG T
          LEFT JOIN SYS_USER U ON U.RWID = T.CREATE_USER_ID
        <include refid="queryWhere" />
    </select>
    <insert id="insert" parameterType="com.fish.core.sys.entity.SysLog">
        INSERT INTO SYS_LOG (ID,OPERATE_NAME,operation,METHOD,PARAMS,IP,REMARK,CREATE_USER_ID,CREATE_TIME)
        VALUES(
        #{id,jdbcType=VARCHAR},
        #{operateName,jdbcType=VARCHAR},
        #{operation,jdbcType=VARCHAR},
        #{method,jdbcType=VARCHAR},
        #{params,jdbcType=VARCHAR},
        #{ip,jdbcType=VARCHAR},
        #{remark,jdbcType=VARCHAR},
        #{createUserId,jdbcType=VARCHAR},
        #{createTime,jdbcType=TIMESTAMP})
    </insert>
    <delete id="deleteBatch" parameterType="java.util.List">
        DELETE FROM SYS_LOG WHERE ID IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id,jdbcType=VARCHAR}
        </foreach>
    </delete>

</mapper>