<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fish.core.org.mapper.OrganizeMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.fish.core.org.entity.Organize" id="organizeMap">
        <result property="orgId" column="org_id" />
        <result property="orgCode" column="org_code" />
        <result property="orgName" column="org_name" />
        <result property="parentOrgId" column="parent_org_id" />
        <result property="sortNo" column="sort_no" />
        <result property="state" column="state" />
        <result property="levelOrg" column="level_org" />
        <result property="theArea" column="the_area" />
        <result property="note" column="note" />
        <result property="inDate" column="in_date" />
        <result property="parentOrgName" column="parent_org_name" />
        <result property="parentOrgCode" column="parent_org_code" />
    </resultMap>
    <select id="queryObject" resultType="com.fish.core.org.entity.Organize">
        select * from sys_organize where org_id = #{value}
    </select>
    <select id="queryByOrgCode" resultType="com.fish.core.org.entity.Organize">

        select * FROM sys_organize where org_code=#{value}
    </select>

    <select id="queryByParentId" resultType="com.fish.core.org.entity.Organize">
        select * from sys_organize where parent_org_id = #{value}
    </select>

    <select id="queryList" resultType="com.fish.core.org.entity.Organize">
        select *,
        (select b.org_name from sys_organize b where b.org_id=t.parent_org_id) as parent_org_name,
        (select b.org_code from sys_organize b where b.org_id=t.parent_org_id) as parent_org_code
        from sys_organize t
        <include refid="where_clause" />
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by org_id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from sys_organize t
        <include refid="where_clause" />
    </select>

    <!-- 搜索数据区域 -->
    <sql id="where_clause">
        <where>
            1=1
            <if test="orgId != null and orgId.trim() != ''"> and t.org_id = #{orgId} </if>
            <if test="orgCode != null and orgCode.trim() != ''"> and t.org_code = #{orgCode} </if>
            <if test="orgName != null and orgName.trim() != ''"> and t.org_name = #{orgName} </if>
            <if test="parentOrgId != null and parentOrgId.trim() != ''"> and t.parent_org_id = #{parentOrgId} </if>
            <if test="sortNo != null and sortNo.trim() != ''"> and t.sort_no = #{sortNo} </if>
            <if test="state != null and state.trim() != ''"> and t.state = #{state} </if>
            <if test="levelOrg != null and levelOrg.trim() != ''"> and t.level_org = #{levelOrg} </if>
            <if test="theArea != null and theArea.trim() != ''"> and t.the_area = #{theArea} </if>
            <if test="note != null and note.trim() != ''"> and t.note = #{note} </if>
            <if test="inDate != null and inDate.trim() != ''"> and t.in_date = #{inDate} </if>
        </where>
    </sql>

    <insert id="save" parameterType="com.fish.core.org.entity.Organize">
        insert into sys_organize
        (
        `org_id`,
        `org_code`,
        `org_name`,
        `parent_org_id`,
        `sort_no`,
        `state`,
        `level_org`,
        `the_area`,
        `note`,
        `in_date`
        )
        values
        (
        #{orgId},
        #{orgCode},
        #{orgName},
        #{parentOrgId},
        #{sortNo},
        #{state},
        #{levelOrg},
        #{theArea},
        #{note},
        #{inDate}
        )
    </insert>

    <update id="update" parameterType="com.fish.core.org.entity.Organize">
        update sys_organize
        <set>
            <if test="orgCode != null">`org_code` = #{orgCode}, </if>
            <if test="orgName != null">`org_name` = #{orgName}, </if>
            <if test="parentOrgId != null">`parent_org_id` = #{parentOrgId}, </if>
            <if test="sortNo != null">`sort_no` = #{sortNo}, </if>
            <if test="state != null">`state` = #{state}, </if>
            <if test="levelOrg != null">`level_org` = #{levelOrg}, </if>
            <if test="theArea != null">`the_area` = #{theArea}, </if>
            <if test="note != null">`note` = #{note}, </if>
            <if test="inDate != null">`in_date` = #{inDate}</if>
        </set>
        where org_id = #{orgId}
    </update>

    <delete id="delete">
        delete from sys_organize where org_id = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from sys_organize where org_id in
        <foreach item="orgId" collection="array" open="(" separator="," close=")">
            #{orgId}
        </foreach>
    </delete>
    <select id="getList" resultType="com.fish.core.org.entity.Organize">
        select *,
        (select b.org_name from sys_organize b where b.org_id=t.parent_org_id) as parent_org_name
        from
        sys_organize t

        order by org_id desc
    </select>
</mapper>